<%if user_signed_in?%>
    <h1>Hello, <%= current_user.user_name %></h1>
<%else%>
    <h1>Hello, Please Sign In</h1>
<%end%>



<% if user_signed_in?%>
<a href='http://localhost:3000/users/sign_out' class="btn btn-danger ml-3"></i>Sign Out</a>
<br>
<%else%>
<a href='http://localhost:3000/users/sign_up' class="btn btn-primary ml-3"></i>Sign Up</a>
<br>
<a href='http://localhost:3000/users/sign_in' class="btn btn-primary ml-3"></i>Sign In</a>
<%end%>

<%if user_signed_in?%>
<a href='http://localhost:3000/users/<%= current_user.id%>'></i>My Profile</a>
<a href='http://localhost:3000/users'></i>Find Friends</a>
<%end%>

<br>